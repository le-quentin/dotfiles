{
    "coc.preferences.currentFunctionSymbolAutoUpdate": true, // Allows showing function the cursor is in
    "coc.source.around.priority": -1,
    "coc.source.buffer.priority": -2,
    "codeLens.enable": true,
    "java.referencesCodeLens.enabled": false,
    "java.implementationsCodeLens.enabled": true,
    "java.trace.server": "off", //Trace the communications with LSP server
    "java.progressReports.enabled": true, // EXPERIMENTAL, disable if issues
    "java.home": "/home/quentin/.asdf/installs/java/temurin-17.0.5+8",
    "java.jdt.ls.java.home": "/home/quentin/.asdf/installs/java/temurin-17.0.5+8",
    "java.jdt.ls.vmargs": "-javaagent:/home/quentin/.config/nvim/dependencies/lombok.jar -Xbootclasspath/a:/home/quentin/.config/nvim/dependencies/lombok.jar", // Use lombok, removing errors about "missing" methods
    "java.jdt.ls.lombokSupport.enabled": true,
    // "clangd.arguments": [
    //     //"--query-driver=/usr/bin/clang++",
    //     "--query-driver=/usr/bin/arm-none-eabi-g++",
    //     "--background-index"
    // ],
    // "clangd.compilationDatabaseCandidates": ["${workspaceFolder}/build"],
    "python.analysis.typeCheckingMode": "off", //Don't check types because then every implicit cast is an error
    "python.formatting.provider": "autopep8",
    // I found this to be buggy (when removing a char, the char just doesn't work anymore)
    // If I need customisation, I'll have to try and fix it or use another pairs pluging (i.e. nvim-autopairs or vim-pairs)
    "pairs.disableLanguages": [],
    "pairs.enableCharacters": [
        "(",
        "[",
        "{",
        "<",
        "'",
        "\"",
        "`"
    ],
    "pairs.enableBackspace": true,
    "snippets.ultisnips.pythonPrompt": false,
    "languageserver": {
        "terraform": {
            "command": "terraform-ls",
            "args": [
                "serve"
            ],
            "filetypes": [
                "terraform",
                "tf"
            ],
            "initializationOptions": {},
            "settings": {}
        }
    }

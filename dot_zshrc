# Claude Code
alias claude-fairlyne="CLAUDE_CONFIG_DIR=~/.claude-fairlyne command claude"
alias claude-perso="CLAUDE_CONFIG_DIR=~/.claude command claude"
function claude() {
    local current_dir="$PWD"
    local fairlyne_dir="${HOME}/fairlyne"

    if [[ "$current_dir" == "$fairlyne_dir" ]] || [[ "$current_dir" == "$fairlyne_dir"/* ]]; then
      claude-fairlyne "$@"
    else
      claude-perso "$@"
    fi
}

###########################################################
#    OS settings                                          #
###########################################################

hwmon_temp() {
	local label_search_str="$1"
	local sensors=""
	for i in /sys/class/hwmon/hwmon*/temp*_input; do
		sensors+="$(cat ${i%_*}_label 2>/dev/null || echo $(basename ${i%_*}));$(readlink -f $i)\n" 
	done 
	echo $sensors | grep "$label_search_str" | cut -d ";" -f 2
}	

